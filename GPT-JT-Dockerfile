FROM 598726163780.dkr.ecr.us-west-2.amazonaws.com/node:latest AS node
FROM nvcr.io/nvidia/pytorch:22.04-py3

WORKDIR /workspace/Port_FasterTransformer
ADD . /workspace/Port_FasterTransformer

RUN mkdir -p build && \
    cd build && \
    git submodule update --init --recursive && \
    cmake -DSM=xx -DCMAKE_BUILD_TYPE=Release -DBUILD_PYT=ON -DBUILD_MULTI_GPU=ON .. &&\
    make && \
    pip install -r ../examples/pytorch/gpt/requirement.txt && \
    pip install -r ../examples/pytorch/gpt/common/requirement.txt && \
    pip install -r ../examples/pytorch/gptj/app/requirements.txt

COPY --from=node /usr/local/bin/together /usr/local/bin/
COPY app app
COPY serve.sh serve.sh
COPY local-cfg.yaml .together/cfg.yaml